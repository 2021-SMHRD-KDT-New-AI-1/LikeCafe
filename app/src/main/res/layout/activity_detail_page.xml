<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailPage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".detailPage">


            <Button
                android:id="@+id/btn_review"
                android:layout_width="414dp"
                android:layout_height="55dp"
                android:backgroundTint="#494F39"

                android:insetTop="0dp"
                android:insetBottom="0dp"

                android:letterSpacing="-0.05"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:text="리뷰작성"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="0dp"
                app:iconPadding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/img_cafeMainImage"
                android:layout_width="0dp"
                android:layout_height="275dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/eenam1" />

            <androidx.appcompat.widget.Toolbar

                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/drawerlayout"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.35" />


            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="204dp"
                android:backgroundTint="#4DFFFFFF"
                android:stateListAnimator="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img_cafeMainImage" />

            <TextView
                android:id="@+id/tv_detailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="이이남스튜디오"
                android:textColor="#000000"
                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/img_cafeMainImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button4"
                app:layout_constraintVertical_bias="0.657" />


            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button4"
                app:srcCompat="@drawable/runlocation" />

            <TextView
                android:id="@+id/tv_detailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="광주 남구 제중로47번길 10 이이남스튜디오 "
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                app:layout_constraintStart_toEndOf="@+id/guideline8"
                app:layout_constraintTop_toTopOf="@+id/imageView10"
                app:layout_constraintVertical_bias="0.437" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView10"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/imageView10"
                app:srcCompat="@drawable/runtime" />

            <TextView
                android:id="@+id/tv_detailBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평일 11:00 ~ 22:00 / 월요일 휴무"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                app:layout_constraintStart_toEndOf="@+id/guideline8"
                app:layout_constraintTop_toTopOf="@+id/imageView11"
                app:layout_constraintVertical_bias="0.692" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView11"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/imageView11"
                app:layout_constraintTop_toBottomOf="@+id/imageView11"
                app:srcCompat="@drawable/runcall" />

            <TextView
                android:id="@+id/tv_detailTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="062-655-5030"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView12"
                app:layout_constraintStart_toEndOf="@+id/guideline8"
                app:layout_constraintTop_toTopOf="@+id/imageView12" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="18dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView12"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/imageView12"
                app:layout_constraintTop_toBottomOf="@+id/imageView12"
                app:srcCompat="@drawable/runsns" />

            <TextView
                android:id="@+id/tv_detailSns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://www.youtube.com/Leeleenam"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView13"
                app:layout_constraintStart_toEndOf="@+id/guideline8"
                app:layout_constraintTop_toTopOf="@+id/imageView13"
                app:layout_constraintVertical_bias="0.52" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView13"
                app:srcCompat="@drawable/runbar" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="상세정보"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView15" />

            <ImageView
                android:id="@+id/img_dist"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toStartOf="@+id/img_parking"
                app:layout_constraintHorizontal_bias="0.117"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17"
                app:srcCompat="@drawable/rundistance" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="좌석간 거리"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/img_dist"
                app:layout_constraintTop_toTopOf="@+id/img_dist" />

            <TextView
                android:id="@+id/tv_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2 ~ 1.5m"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/img_dist"
                app:layout_constraintStart_toStartOf="@+id/textView18" />

            <ImageView
                android:id="@+id/img_parking"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="144dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_dist"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img_dist"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/runparking" />

            <TextView
                android:id="@+id/tv_parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14대(장애인 주차장)"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/img_parking"
                app:layout_constraintStart_toStartOf="@+id/textView19" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="주차 가능 여부"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_parking"
                app:layout_constraintStart_toEndOf="@+id/img_parking"
                app:layout_constraintTop_toTopOf="@+id/img_parking"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/img_stair"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/img_parking"
                app:layout_constraintStart_toStartOf="@+id/img_parking"
                app:layout_constraintTop_toBottomOf="@+id/img_parking"
                app:srcCompat="@drawable/runfloor" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="층 수"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_stair"
                app:layout_constraintStart_toEndOf="@+id/img_stair"
                app:layout_constraintTop_toTopOf="@+id/img_stair"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2층"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/img_stair"
                app:layout_constraintStart_toStartOf="@+id/textView21" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="리뷰"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.056"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView20" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_detailKeyword"
                app:srcCompat="@drawable/runbar" />

            <ImageView
                android:id="@+id/img_table"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/img_dist"
                app:layout_constraintHorizontal_bias="0.112"
                app:layout_constraintStart_toStartOf="@+id/img_dist"
                app:layout_constraintTop_toBottomOf="@+id/img_dist"
                app:srcCompat="@drawable/runtable" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="테이블 개수"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_table"
                app:layout_constraintStart_toEndOf="@+id/img_table"
                app:layout_constraintTop_toTopOf="@+id/img_table"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_tableNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23개"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/img_table"
                app:layout_constraintStart_toStartOf="@+id/textView20" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.12" />

            <TextView
                android:id="@+id/tv_detailKeyword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="#구분 화장실 #조용한"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/img_table"
                app:layout_constraintTop_toBottomOf="@+id/img_table" />

            <ImageView
                android:id="@+id/img_detailZzim"
                android:layout_width="26dp"
                android:layout_height="28dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button4"
                app:srcCompat="@drawable/runheart" />

            <TextView
                android:id="@+id/tv_detailZzimCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                app:layout_constraintEnd_toEndOf="@+id/img_detailZzim"
                app:layout_constraintStart_toStartOf="@+id/img_detailZzim"
                app:layout_constraintTop_toBottomOf="@+id/img_detailZzim" />

            <ListView
                android:id="@+id/lv_reviewList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_review"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/navi_menu" />


</androidx.drawerlayout.widget.DrawerLayout>