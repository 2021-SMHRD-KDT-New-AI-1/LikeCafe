<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#00ff0000"
    tools:context=".r_selection">

    <Button
        android:id="@+id/btn_r8"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="#00ff0000"
        android:drawableTint="#00ff0000"
        android:text="울산"
        android:textColor="#5D5D5D"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/btn_r7"
        app:layout_constraintTop_toBottomOf="@+id/btn_r7" />

    <Button
        android:id="@+id/btn_r7"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="#00ff0000"
        android:drawableTint="#00ff0000"
        android:text="대전"
        android:textColor="#5D5D5D"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_r8"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/btn_r6"
        app:layout_constraintTop_toBottomOf="@+id/btn_r6" />

    <Button
        android:id="@+id/btn_r6"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#00ff0000"
        android:drawableTint="#00ff0000"
        android:text="광주"
        android:textColor="#5D5D5D"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_r7"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/btn_r5"
        app:layout_constraintTop_toBottomOf="@+id/btn_r5" />

    <Button
        android:id="@+id/btn_r5"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="#00ff0000"
        android:drawableTint="#00ff0000"
        android:text="인천"
        android:textColor="#5D5D5D"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_r6"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/btn_r4"
        app:layout_constraintTop_toBottomOf="@+id/btn_r4" />

    <Button
        android:id="@+id/btn_r4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="#00ff0000"
        android:drawableTint="#00ff0000"
        android:text="대구"
        android:textColor="#5D5D5D"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_r5"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/btn_r3"
        app:layout_constraintTop_toBottomOf="@+id/btn_r3" />

    <Button
        android:id="@+id/btn_r1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#00ff0000"
        android:drawableTint="#00ff0000"
        android:text="서울"
        android:textColor="#5D5D5D"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_r2"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_r3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="#00ff0000"
        android:drawableTint="#00ff0000"
        android:text="부산"
        android:textColor="#5D5D5D"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_r4"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/btn_r2"
        app:layout_constraintTop_toBottomOf="@+id/btn_r2" />

    <Button
        android:id="@+id/btn_r2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="#00ff0000"
        android:drawableTint="#00ff0000"
        android:text="경기"
        android:textColor="#5D5D5D"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_r3"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/btn_r1"
        app:layout_constraintTop_toBottomOf="@+id/btn_r1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="581dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/fl_button"
        app:layout_constraintGuide_end="284dp"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:background="#D5D5D5"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="580dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="40dp" />

    <Button
        android:id="@+id/btn_r_choice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#494F39"

        android:text="지역 선택"

        android:insetTop="0dp"
        android:insetBottom="0dp"

        android:letterSpacing="-0.05"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="0dp"
        app:iconPadding="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7" />


</androidx.constraintlayout.widget.ConstraintLayout>

